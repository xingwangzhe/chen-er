{
  "name": "chen-er",
  "version": "1.2.5",
  "type": "module",
  "files": [
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run pg && vite",
    "pg": "peggy --format es --allowed-start-rules start -o grammar/peggy/all-parser.js grammar/peggy/common.peggy grammar/peggy/entities.peggy grammar/peggy/sample.peggy grammar/peggy/all.peggy",
    "build": "bun run pg && vite build && tsc -p tsconfig.build.json",
    "preview": "vite preview"
  },
  "devDependencies": {
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xingwangzhe/chen-er.git"
  },
  "homepage": "https://github.com/xingwangzhe/chen-er#readme",
  "bugs": {
    "url": "https://github.com/xingwangzhe/chen-er/issues"
  },
  "license": "Apache-2.0",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "echarts": "^6.0.0",
    "peggy": "^5.0.6"
  }
}
